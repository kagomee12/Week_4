<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <link rel="stylesheet" href="/logo/index.css" />
    <title>Document</title>
</head>

<body class="bg-secondary">
    <nav class="navbar navbar-expand-lg bg-body-tertiary" >
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img src="/logo/sticker_10.webp" alt="" style="width: 50px;" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link " href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/myproject">Add Project</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonials</a>
                    </li>
                </ul>
                <a href="/contact_me"><button class="btn btn-danger" type="submit">Contact Me</button></a>
            </div>
        </div>
    </nav>
    <div class="container">
        {{#each data}}
        <div class="card mb-3 mt-5" style="background-color: wheat;">
            <div class="d-flex ">
                <div class="d-flex flex-column w-100">
                    <div>
                        <h1 class="card-title w-100 text-center">{{this.judul}}</h1>
                    </div>
                    <div class="d-flex flex-wrap">
                        <div class="w-50 justify-content-center d-flex rounded-3" style="border: solid;">
                            <img src="/logo/1296745_720.jpg" class="card-img-top" alt="..." style="object-fit: cover;" />
                        </div>
                        <div class="w-50  align-self-center">
                            <h5 class="card-title">Duration</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary"><i class="fa-solid fa-calendar-days"></i> {{this.tglawal}} to
                                {{this.tglakhir}}</h6>
                            <h6 class="card-subtitle mb-2 text-body-secondary"><i class="fa-solid fa-clock"></i> {{this.durasi}}</h6>
                            <br>
                            <br>
                            <h5 class="card-title">Technologies</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">
                                <div class="d-flex flex-wrap w-50" style="">
                                    <div class="w-50"><i class="{{this.nodejsicon}}"></i> {{this.nodejstext}}</div>
                                    <div class="w-50"><i class="{{this.reactjsicon}}"></i> {{this.reactjstext}}</div>
                                    <div class="w-50"><i class="{{this.nextjsicon}}"></i> {{this.nextjstext}}</div>
                                    <div class="w-50"><i class="{{this.typescripticon}}"></i> {{this.typescripttext}}</div>
                                </div>
                            </h6>

                            <br />

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body mt-4">
                <p class="card-text">{{this.content}}</p>
            </div>
        </div>
    {{/each}}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>